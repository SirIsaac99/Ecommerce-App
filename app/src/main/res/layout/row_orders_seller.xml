<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="3dp"
    app:contentPadding="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/orderIdEt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order: 57890"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/orderDateEt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/nextIv"
            android:text="22/02/2022"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/emailEt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/orderIdEt"
            android:text="Email"
            android:textColor="@color/Colorblue" />

        <TextView
            android:id="@+id/amountEt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/emailEt"
            android:text="Total Amount: $29.14"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/statusEt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/amountEt"
            android:layout_toStartOf="@id/nextIv"
            android:text="In Progress"
            android:textColor="@color/colorGreen" />

        <ImageView
            android:id="@+id/nextIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_next_gray" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>